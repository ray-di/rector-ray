{
    "name": "ray/rector-ray",
    "type": "rector-extension",
    "license": "MIT",
    "description": "Rector upgrades rules for Ray.Di",
    "require": {
        "php": ">=8.0",
        "koriym/attributes": "^1.0",
        "ray/di": "^2.14"
    },
    "autoload": {
        "psr-4": {
            "Rector\\Ray\\": "rules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rector\\Tests\\": "rules-tests/",
            "Rector\\Ray\\RayDiNamedAnnotation\\Rector\\ClassMethod\\": "rules-tests/",
            "Rector\\Tests\\RayDiNamedAnnotation\\Rector\\ClassMethod\\RayDiNamedAnnotationRector\\Fixture\\": "rules-tests/RayDiNamedAnnotation/Rector/ClassMethod/RayDiNamedAnnotationRector/Fake/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit rules-tests",
        "tests": ["@cs", "@test", "@sa"],
        "coverage": ["php -dzend_extension=xdebug.so -dxdebug.mode=coverage ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "pcov": ["php -dextension=pcov.so -d pcov.enabled=1 ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage  --coverage-clover=coverage.xml"],
        "cs": ["./vendor/bin/phpcs --standard=./phpcs.xml rules rules-tests"],
        "cs-fix": ["./vendor/bin/phpcbf rules rules-tests"],
        "clean": ["./vendor/bin/psalm --clear-cache", "rm -rf tests/tmp/*.php"],
        "sa": ["./vendor/bin/psalm --show-info=true"]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^0.14.6",
        "doctrine/coding-standard": "^10.0",
        "vimeo/psalm": "^4.29"
    },

    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
